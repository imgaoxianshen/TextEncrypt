.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time {
  text-align: center;
  line-height: 40rpx;
}

.time-container {
  width: 700rpx;
}

.time-text {
  background-color: #fff;
  z-index: 999;
  position: relative;
  padding: 0 20rpx;
}

.horizn {
  height: 1px;
  background-color: #666;
  width: 95%;
  margin: 0 auto;
  position: relative;
  top: -20rpx;
}

.password-container{
  display: flex;
  flex-direction: row;
  margin-left:-40rpx;
  margin-top:40rpx;
}

.password{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  margin-left: 40rpx;
  border: 1px solid #666;
  border-radius: 20rpx;
}

.pass-text{
  font-size:50rpx;
}

.btn-container{
  margin-top:60rpx;
}

.btn{
  margin-top:20rpx;
  width:600rpx;
  border: 1px solid #09bb07;
  border-radius: 10rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.confirm{
  color:#fff;
}

.btn-confirm{
  background-color:#09bb07;
}

.btn-text{
  font-size:35rpx;
}

.forget{
  margin-top:50rpx;
}

.choose{
  font-size: 30rpx;
}

.forget-text{
  font-size: 30rpx;
  color:#576b95;
  font-weight:bold;
}